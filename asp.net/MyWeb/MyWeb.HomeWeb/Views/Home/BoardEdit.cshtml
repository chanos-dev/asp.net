<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

@model BoardModel
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <form id="form1" method="post" action="/home/boardeditinput">
                        @Html.Hidden("idx", Model.Idx)
                        <table class="table table-striped table-bordered no-wrap">
                            <colgroup>
                                <col style="width:100px" />
                                <col style="width:auto" />
                            </colgroup>
                            <tbody>
                                <tr>
                                    <td>제목</td>
                                    <td>@Html.TextBox("title", Model.Title, new { @class = "form-control" })</td>
                                    @* <input name="title" value=@Model.Title class="form-control" type="text" /> *@
                                </tr>
                                <tr>
                                    <td>내용</td>
                                    <td>@Html.TextArea("contents", Model.Contents)</td>
                                </tr>
                                <tr>
                                    <td>작성자</td>
                                    <td>@Model.RegUsername (@Model.RegDate.ToString("yyyy-MM-dd"))</td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="text-right">
                            <button type="submit" id="btn1" class="btn btn-sm btn-info">저장</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $("#form1 textarea[name=contents]").summernote();

    $("#btn1").click(function () {
        var code = $("#form1 textarea[name=contents]").summernote("code");

        $("#form1 textarea[name=contents]").val(code);
    });
</script>