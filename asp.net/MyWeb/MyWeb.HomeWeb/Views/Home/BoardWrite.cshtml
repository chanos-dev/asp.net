<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <form id="form1" method="post" action="/home/boardwriteinput">
                        <table class="table table-striped table-bordered no-wrap">
                            <colgroup>
                                <col style="width:100px" />
                                <col style="width:auto" />
                            </colgroup>
                            <tbody>
                                <tr>
                                    <td>제목</td>
                                    <td>
                                        <input name="title" type="text" class="form-control" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>내용</td>
                                    <td>
                                        <textarea name="contents" class="form-control" rows="10"></textarea>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </form>

                    <div class="text-right">
                        <button id="btn1" class="btn btn-sm btn-primary">저장</button>
                    </div>
                </div>                  
            </div>
        </div>
    </div>
</div>

<script>
    $("#btn1").click(function () {
        $("#form1").submit()
    });
</script>