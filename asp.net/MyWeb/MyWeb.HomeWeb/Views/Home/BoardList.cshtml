@model List<BoardModel>
@{  

}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered no-wrap">
                        <colgroup>
                            <col style="width:100px" />
                            <col style="width:auto" />
                            <col style="width:150px" />
                            <col style="width:120px" />
                        </colgroup>
                        <thead>
                            <tr>
                                <th>번호</th>
                                <th>제목</th>
                                <th>등록자</th>
                                <th>등록일</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in @Model)
                            {
                                <tr>
                                    <th>@item.Idx</th>
                                    <th><a href="/home/boardview?idx=@item.Idx">@item.Title</a></th>
                                    <th>@item.RegUsername</th>
                                    <th>@item.RegDate.ToString("yyyy-MM-dd")</th>
                                </tr> 
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.Count < 1)
                {
                    <div class="alert alert-info">데이터가 없습니다.</div>
                }

                <div class="text-right">
                    <a href="/home/boardwrite" class="btn btn-sm btn-warning">글쓰기</a>
                </div>
            </div>
        </div>
    </div>
</div>