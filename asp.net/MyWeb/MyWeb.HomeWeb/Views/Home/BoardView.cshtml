@model BoardModel
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <form id="form1" method="post" action="/home/boardwriteinput">
                        <table class="table table-striped table-bordered no-wrap">
                            <colgroup>
                                <col style="width:100px" />
                                <col style="width:auto" />
                            </colgroup>
                            <tbody>
                                <tr>
                                    <td>제목</td>
                                    <td>@Model.Title</td>
                                </tr>
                                <tr>
                                    <td>내용</td>
                                    <td><pre style="width:100%">@Model.Contents</pre></td>
                                </tr>
                                <tr>
                                    <td>작성자</td>
                                    <td>@Model.RegUsername (@Model.RegDate.ToString("yyyy-MM-dd"))</td>
                                </tr>
                            </tbody>
                        </table>
                    </form> 
                </div>                  
            </div>
        </div>
    </div>
</div>